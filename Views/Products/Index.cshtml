@model IEnumerable<WebApplicationRB.Models.Product>

@{
    ViewData["Title"] = @Resources.Resource.Products;
}

<h1>@Resources.Resource.Products</h1>

<p>
    <a asp-action="Create">@Resources.Resource.Create_new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">@Resources.Resource.Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">@Resources.Resource.Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">@Resources.Resource.Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

