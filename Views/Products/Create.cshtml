@model WebApplicationRB.Models.Product

@{
    ViewData["Title"] = @Resources.Resource.Create + " " + @Resources.Resource.Product;
}


<h4>@Resources.Resource.Create @Resources.Resource.Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"><option disabled selected>-- @Resources.Resource.Select_Category --</option></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" asp-is-invariant="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"  id="create-desc" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <label id="create-desc-counter"><span></span>/<span></span></label>
            </div>

            <div class="form-group margin-top-2">
                <input type="submit" value="@Resources.Resource.Create" class="button success margin-right-1" />
                <a asp-action="Index" class="button">@Resources.Resource.Back_to_List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            countChar('#create-desc', '#create-desc-counter', 500);
        });
    </script>
}
